{
  "name": "wm2",
  "description": "Git worktree management with hooks - ideal for coding agents like Claude Code",
  "version": "0.2.2",
  "author": "nacyot <propellerheaven@gmail.com>",
  "bin": {
    "wm2": "./bin/run.js"
  },
  "bugs": "https://github.com/nacyot/wm2/issues",
  "dependencies": {
    "@inquirer/prompts": "^7.7.1",
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "execa": "^9.6.0",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1",
    "@oclif/prettier-config": "^0.2.1",
    "@types/node": "^18",
    "eslint": "^9",
    "eslint-config-oclif": "^6",
    "eslint-config-prettier": "^10",
    "oclif": "^4",
    "shx": "^0.3.3",
    "ts-node": "^10",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.17.1"
  },
  "files": [
    "./bin",
    "./dist",
    "./.worktree.yml.example",
    "./oclif.manifest.json"
  ],
  "homepage": "https://github.com/nacyot/wm2",
  "keywords": [
    "git",
    "worktree",
    "workspace",
    "cli",
    "oclif"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "wm2",
    "dirname": "wm2",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " "
  },
  "repository": "nacyot/wm2",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "npm run build && oclif manifest",
    "test": "vitest run",
    "test:watch": "vitest",
    "version": "oclif readme && git add README.md"
  },
  "types": "dist/index.d.ts"
}
